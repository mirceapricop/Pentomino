# directional (relative) commands
links	act:left
rechts	act:right
weiter,warm,nochmal	act:continue
zurück	act:reverse
oben,hoch	act:up
unten,runter	act:down
abbrechen,zurücklegen,vonvorne,neuesteil	act:cancel
#TODO: nochmal drüber nachdenken

# modifiers for strength
bisschen,biss'l,etwas,wenig,stück,stückchen	modifier:weak
groß,größer,größeres,großes,sehr,stark,weit,viel	modifier:strong
mehr	modifier:regular
ganz,rand	modifier:max

# stop
stopp,stop,halt,reicht,aufhören	act:stop

# dropping
abwärts,loslassen,einwerfen,fallen,genau,ablegen	act:drop

# positional (absolute) commands
#mitte	pos:center
#rand	pos:border
